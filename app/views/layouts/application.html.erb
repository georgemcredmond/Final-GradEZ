  <% else %>
    <%= link_to "Sign In", new_teacher_session_path %></li>
  <% end %> 
        </ul>
        <a href="/" id="logo">GradEZ</a>
        <% if current_teacher %>
        <ul class="topnav2">
          <li><a href="/courses/show">Classes</a></li>
          <li>Messages</li>
          <li><a href="/teachers/<%= current_teacher.id %>">Account</a></li>
        </ul>
        <% end %>
      </div>
    </div>
    <%= yield %>
   <br/>
   <div class="footer"> 
      <div class="container"> 
        <div class="row"> 
          <div class="col-md-2"> 
            <div class="copy">Â© GradEZ</div> 
